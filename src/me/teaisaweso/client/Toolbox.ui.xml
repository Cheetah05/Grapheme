<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.button {
			width: 150px;
		}
		.stack {
			width: 200px;
			height: 300px;
			background: #BBDAF0;
			border: 1px solid #587780;
		}
		.verticalPanel {
			width: 200px;
			height: 100px;
			background: #BBDAF0;
			border-top: 1px solid #99BDD1;
			border-left: 1px solid #99BDD1;
			border-right: 1px solid #99BDD1;
		}
		.header {
			background: #BBDAF0;
			border-top: 1px solid #99BDD1;
			border-left: 1px solid #99BDD1;
			border-right: 1px solid #99BDD1;
			font-weight: bold;
		}
		.header2 {
			background: #BBDAF0;
			border: 1px solid #99BDD1;
			font-weight: bold;
		}
	</ui:style>
	<g:StackLayoutPanel styleName='{style.stack}' ui:field="stackPanel" unit='EM'>
		<g:stack>
			<g:customHeader size='3'>
				<g:Label styleName='{style.header}'>Tools</g:Label>
			</g:customHeader>
			<g:VerticalPanel styleName='{style.verticalPanel}'>
				<g:Button styleName='{style.button}' ui:field="button1" >Add Vertex</g:Button>
				<g:Button styleName='{style.button}' ui:field="button2" >Add Edge</g:Button>
				<g:Button styleName='{style.button}' ui:field="button3" >Remove Vertex</g:Button>
				<g:Button styleName='{style.button}' ui:field="button4" >Remove Edge</g:Button>
			</g:VerticalPanel>
		</g:stack>
		<g:stack>
			<g:customHeader size='3'>
				<g:Label styleName='{style.header2}'>Options</g:Label>
			</g:customHeader>
			<g:FlowPanel ui:field="options"/>
		</g:stack>
	</g:StackLayoutPanel>
</ui:UiBinder>