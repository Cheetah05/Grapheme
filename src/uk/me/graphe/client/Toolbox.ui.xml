<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.pnlCont {
			margin: 15px 0 0 25px;
		}
		
        .pnlTools {
            background: url(images/toolgrad.png) repeat-x +1px 0;
            border: 1px black solid;
            margin-right: 10px;
        }
        
        .pnlOptions {
        	margin-left: 15px;
        }
        
    	.btnAddVert, .btnAddEd, .btnMove, .btnSelect, .btnZoom {
            width: 35px;
            height: 35px;
            border: 0;
            cursor: pointer;
            margin: 0 2px;
        }
        
        .btnAddVert {
            background: url(images/addvert.png) no-repeat;
        }
        
        .btnAddVert:hover {
            background: url(images/addvertd.png) no-repeat;
        }
        
        .btnAddEd {
            background: url(images/addedge.png) no-repeat;
        }
        
        .btnAddEd:hover {
            background: url(images/addedged.png) no-repeat;
        }
        
        .btnMove {
            background: url(images/move.png) no-repeat;
        }

        .btnMove:hover {
            background: url(images/moved.png) no-repeat;
        }
        
        .btnSelect {
        	background: url(images/select.png) no-repeat;
        }

        .btnSelect:hover {
        	background: url(images/selectd.png) no-repeat;
        }
        
        .btnZoom {
        	background: url(images/zoom.png) no-repeat;
        }

        .btnZoom:hover {
        	background: url(images/zoomd.png) no-repeat;
        }
        
        .btnOpts {
			margin: 8px 0 0 5px;
        }
        
        .lbl {
            font-weight: bold;
            font-size: 13px;
            margin: 12px 0 0 5px;
        }
        
        .field {
        	margin: 8px 0 0 5px;
        }
    </ui:style>
    <g:HorizontalPanel styleName='{style.pnlCont}' ui:field="pnlContainer">
	    <g:HorizontalPanel styleName='{style.pnlTools}' ui:field="pnlTools1">
	    	<g:Button styleName='{style.btnSelect}' ui:field="btnSelect" />
	    	<g:Button styleName='{style.btnMove}' ui:field="btnMove" />
	    	<g:Button styleName='{style.btnZoom}' ui:field="btnZoom" />
	    </g:HorizontalPanel>	
	    <g:HorizontalPanel styleName='{style.pnlTools}' ui:field="pnlTools2">
		    <g:Button styleName='{style.btnAddVert}' ui:field="btnAddVert" />
		    <g:Button styleName='{style.btnAddEd}' ui:field="btnAddEd" />
	    </g:HorizontalPanel>		    
	    <g:HorizontalPanel styleName='{style.pnlOptions}' ui:field="pnlOptions">
	    	<g:Button styleName='{style.btnOpts}' ui:field="btnOk" />
	    	<g:Button styleName='{style.btnOpts}' ui:field="btnCancel" />
	    	<g:Label styleName='{style.lbl}' ui:field="lblInstruction" />
	    	<g:TextBox styleName='{style.field}' ui:field="txtParam" />
	    </g:HorizontalPanel>
    </g:HorizontalPanel>
</ui:UiBinder>