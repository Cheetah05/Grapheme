<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	
		.pnlCont {
			margin: 15px 0 0 25px;
		}
		
        .pnlTools {
            background: url(images/toolgrad.png) repeat-x +1px 0;
            border: 1px black solid;
            margin-right: 10px;
        }

    </ui:style>
    <g:HorizontalPanel styleName='{style.pnlCont}'>
	    <g:HorizontalPanel styleName='{style.pnlTools}' ui:field="pnlToolsStd" />
	    <g:HorizontalPanel styleName='{style.pnlTools}' ui:field="pnlToolsOps" />	    
	    <g:HorizontalPanel styleName='{style.pnlTools}' ui:field="pnlToolsFlowStyle" />
	    <g:HorizontalPanel styleName='{style.pnlTools}' ui:field="pnlToolsAlgs" />
	    <g:HorizontalPanel styleName='{style.pnlTools}' ui:field="pnlToolsAlgsRun" />
	    <g:HorizontalPanel styleName='{style.pnlTools}' ui:field="pnlToolsOptions" /> 
    </g:HorizontalPanel>    
</ui:UiBinder>