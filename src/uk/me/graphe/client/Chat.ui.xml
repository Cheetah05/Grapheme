<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" >
	<ui:style>
		.chat {
			width: 100%;
			height: 100%;
		}
		
		.button {
			width: 100%;
			height: 30px;
		}
		
		.input {
			width: 100%;
			height: 50px;
		}
		
		.output{
			width: 100%;
			height: 350px;
		}
		
		.chatbox {
			  width: 300px;
			  height: 350px;
			  border-top: 1px solid #CCCCCC;
			  border-right: 1px solid #CCCCCC;
			  border-left: 1px solid #CCCCCC;
			  background: #f0f0f0;
			  font: 13px arial;
			  color: #333;
			  position:fixed;
			  bottom: 31px;
			  right: 25px;
		}
		
		.convo {
			
		}
		
		.chatbutton {
			width: 300px;
			height: 30px;
			font: 13px arial;
			position: fixed;
			right: 25px;
		}
				
	</ui:style>
	<g:VerticalPanel height="380" width="300">
		<g:VerticalPanel styleName='{style.chatbox}' ui:field='panel' height="350">
			<g:TextArea styleName='{style.convo}' ui:field='output' width="298px" height="300px"></g:TextArea>
			<g:TextArea styleName='{style.input}' ui:field='input' width="298px" height="50px"></g:TextArea>
		</g:VerticalPanel>
		<g:Button styleName='{style.button}' ui:field='minimize' width="298px" height="30px">Hide Chat</g:Button>
	</g:VerticalPanel>
	
</ui:UiBinder>