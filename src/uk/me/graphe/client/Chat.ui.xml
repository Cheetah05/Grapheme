<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" >
	<ui:style>
		.chat {
			width: 100%;
			height: 100%;
		}
		
		.button {
			width: 50px;
			height: 50px;
		}
		
		.input {
			width: 250px;
			height: 50px;
		}
		
		.output{
			width: 300px;
			height: 350px;
		}
				
	</ui:style>
	<g:VerticalPanel styleName='{style.chat}' width="300" height="420">
		<g:TextArea styleName='{style.output}' ui:field='output'></g:TextArea>
		<g:Label ui:field='label' height="20" width="300"/>
		<g:HorizontalPanel>
			<g:TextArea styleName='{style.input}' ui:field='input'></g:TextArea>
			<g:Button styleName='{style.button}' ui:field='button'>Send</g:Button>
		</g:HorizontalPanel>
	</g:VerticalPanel>
</ui:UiBinder>